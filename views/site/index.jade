                        //-     option(value='sports') Sports
                        //- // /.form-group
                        //- .hero-image-price.form-group
                        //-   input.form-control(type='text', placeholder='Min. Price')
                        // /.form-group
                        button.btn.btn-primary.btn-block(type='submit') Search
                    // /.col-*
                  // /.row
                // /.container
              // /.hero-image-form-wrapper
            // /.hero-image-inner
          // /.hero-image
        .container
          .page-header
            h1 Most Recent Events
            p
              | Check them out and choose one to invest in!
          // /.page-header
          .cards-simple-wrapper
            .row
              - if (gigs.length > 0)
                - each gig in gigs
                  .col-sm-6.col-md-4.col-lg-3
                    .card-simple(data-background-image="#{gig.header}", style='background-image: url(#{gig.header}')
                      .card-simple-background
                        .card-simple-content
                          h2
                            a(href='/events/#{gig.pid}/#{gig.slug}') #{gig.title}
                          .card-simple-actions
                            a.fa.fa-search(href='/events/#{gig.pid}/#{gig.slug}')
                          // /.card-simple-actions
                        // /.card-simple-content
                        .card-simple-label #{gig.main_tag}
                      // /.card-simple-background
                    // /.card-simple
                  // /.col-*
              - else
                p Sorry, no gigs yet...
            // /.row
          // /.cards-simple-wrapper
          
          .block.background-white.fullwidth
            .page-header
              h1 Testimonials
              p
                | Read what our customers say about our services.
            // /.page-header
            .row
              .col-sm-6
                .testimonial
                  .testimonial-image
                    img(src="#{CDN('/img/testimonials/jason.jpg', true)}")
                  // /.testimonial-image
                  .testimonial-inner
                    .testimonial-title
                      h2 Exactly What I Need
                      .testimonial-rating
                        i.fa.fa-star
