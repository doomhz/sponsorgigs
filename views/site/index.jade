extends ../layout

block content
  .main
    .main-inner
      .content
        .mt-80
          .hero-image
            .hero-image-inner(style="background-image: url(#{CDN('/img/home_header_3.jpg')};")
              .hero-image-content
                .container
                  h1 Sponsor events
                  p
                    | Sponsor events or get sponsored.
                  a.btn.btn-primary.btn-lg(href='/events') Sponsor events
                  a.btn.btn-secondary.btn-lg(href='/events/add') Add your event
                // /.container
              // /.hero-image-content
              .hero-image-form-wrapper
                .container
                  .row
                    .col-sm-4.col-sm-offset-8.col-lg-4.col-lg-offset-7
                      form(method='get', action='/events')
                        h2 Start Searching
                        .hero-image-keyword.form-group
                          input.form-control(type='text', placeholder='Keyword')
                        // /.form-group
                        //- .hero-image-location.form-group
                        //-   select.form-control(title='Location')
                        //-     option Antwerp
                        //- // /.form-group
                        //- .hero-image-category.form-group
